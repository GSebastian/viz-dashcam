<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/Black"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

    <!-- No overlay -->
    <LinearLayout
        android:id="@+id/llNoOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvOverlayPermission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/overlay_permission_not_granted"
            android:textColor="@color/White"
            android:textSize="36sp"/>

        <Button
            android:id="@+id/btnRetryOverlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/Transparent"
            android:padding="20dp"
            android:text="@string/grant_permission"
            android:textAllCaps="true"
            android:textColor="@color/White"
            android:textSize="24sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- No camera -->
    <LinearLayout
        android:id="@+id/llNoCamera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvCameraPermission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/camera_permission_not_granted"
            android:textColor="@color/White"
            android:textSize="36sp"/>

        <Button
            android:id="@+id/btnRetryCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/Transparent"
            android:padding="20dp"
            android:text="@string/grant_permission"
            android:textAllCaps="true"
            android:textColor="@color/White"
            android:textSize="24sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- No write permission -->
    <LinearLayout
        android:id="@+id/llNoWrite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvWritePermission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/write_permission_not_granted"
            android:textColor="@color/White"
            android:textSize="36sp"/>

        <Button
            android:id="@+id/btnRetryWrite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/Transparent"
            android:padding="20dp"
            android:text="@string/grant_permission"
            android:textAllCaps="true"
            android:textColor="@color/White"
            android:textSize="24sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- No basic permissions-->
    <LinearLayout
        android:id="@+id/llNoBasic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvBasicPermissions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/basic_permissions_not_granted"
            android:textColor="@color/White"
            android:textSize="36sp"/>

        <Button
            android:id="@+id/btnRetryBasic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/Transparent"
            android:padding="20dp"
            android:text="@string/grant_permission"
            android:textAllCaps="true"
            android:textColor="@color/White"
            android:textSize="24sp"
            android:textStyle="bold"/>
    </LinearLayout>

</RelativeLayout>