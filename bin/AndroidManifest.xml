<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vizdashcam"
    android:versionCode="1"
    android:versionName="1.0" >

    <supports-screens android:anyDensity="true" />

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />
    
    <uses-feature android:name="android.hardware.camera" android:required="true" />
    
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name="GlobalState"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@android:style/Theme.Holo.Light" >
        
        <service
            android:name="com.vizdashcam.ServicePreview"
            android:enabled="true"
            android:stopWithTask="false" />

        <activity
            android:name="com.vizdashcam.activities.ActivityMain"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.vizdashcam.activities.ActivitySplashscreen"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.vizdashcam.activities.ActivitySettings"
            android:label="@string/app_name"
            android:parentActivityName="com.vizdashcam.activities.ActivityMain"
            android:theme="@style/ReskinTheme" >
        </activity>
        <activity
            android:name="com.vizdashcam.activities.DialogStorage"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>
        <activity
            android:name="com.vizdashcam.activities.ActivityVideoList"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:parentActivityName="com.vizdashcam.activities.ActivityMain"
            android:theme="@style/ReskinTheme" >
        </activity>
        <activity
            android:name="com.vizdashcam.activities.ActivityVideoItem"
            android:label="@string/app_name"
            android:parentActivityName="com.vizdashcam.activities.ActivityVideoList"
            android:theme="@style/ReskinTheme" >
        </activity>
    </application>

</manifest>